<%= render '/layouts/header' %>
<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Address</th>
      <th>Size</th>
      <th>Founded</th>
      <th>Revenue</th>
      <th>Synopsis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.website %></td>
        <td><%= company.address %></td>
        <td><%= company.size %></td>
        <td><%= company.founded %></td>
        <td><%= company.revenue %></td>
        <td><%= company.synopsis %></td>
<!--        <td><%#= link_to 'Show', company %></td>-->
        <% if current_user.admin? || current_user.company_id==company.id%>
          <td><%= link_to 'Edit', edit_company_path(company) %></td>
          <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if current_user.admin? || current_user.realtor?%>
  <p><%= link_to 'Add a new Company', new_company_path %></p>
<% end %>

<p><%= link_to "Back", user_path(@current_user)%></p>


