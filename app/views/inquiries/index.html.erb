<p id="notice"><%= notice %></p>

<h1>Inquiries</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>House</th>
      <th>Subject</th>
      <th>Message</th>
      <th>Reply</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.ihunter_name %></td>
        <td><%= inquiry.house_id %></td>
        <td><%= inquiry.subject %></td>
        <td><%= inquiry.message %></td>
        <td><%= inquiry.reply %></td>
<!--        <td><%#= link_to 'Edit', edit_inquiry_path %></td>-->
        <% if current_user.hunter? && (inquiry.user_id == current_user.id) %>
          <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if current_user.admin? %>
          <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if current_user.realtor? %>
          <td><%= link_to 'Reply', edit_inquiry_path(inquiry) %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

