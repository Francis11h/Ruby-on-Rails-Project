<p id="notice"><%= notice %></p>
  <%= form_with(model: @inquiry, local: true) do |form| %>
    <% if @inquiry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@inquiry.errors.count, "error") %> prohibited this form from being saved:</h2>

        <ul>
          <% @inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% if current_user.hunter? %>
    <h1>New Inquiry</h1>
    <div class="field" style="display: none;">
      <%= form.hidden_field :house_id, :value => @houseinquiry%>
    </div>
    <div class="field" style="display: none;">
      <%= form.hidden_field :user_id, :value => current_user.id %>
    </div>

    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject %>
    </div>
    <div class="field">
      <%= form.label :message %>
      <%= form.text_field :message %>
    </div>
  <% else %>
    <div class="field">
      <%= form.label :reply %>
      <%= form.text_area :reply %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


